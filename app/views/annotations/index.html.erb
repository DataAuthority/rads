<h1>Listing annotations</h1>

<%= render 'filter_form' %>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Record</th>
      <th>Context</th>
      <th>Term</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @annotations.each do |annotation| %>
      <tr>
        <td><%= annotation.creator %></td>
        <td><%= annotation.annotated_record %></td>
        <td><%= annotation.context %></td>
        <td><%= annotation.term %></td>
        <td>
           <% if can? :show, annotation.annotated_record %>
              <%= link_to 'Show Record', annotation.annotated_record %>
          <% end %>
          <% if can? :destroy, annotation %>
              <%= link_to 'Destroy', annotation, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

