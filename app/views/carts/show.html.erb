<h1>Listing records in cart</h1>

<%= render 'form' %>

<%= link_to 'Empty', cart_url, method: :delete, data: { confirm: 'Are you sure?' }, class: "empty_cart" %>
<table>
  <thead>
    <tr>
      <th>Record</th>
      <th>User</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_records.each do |cart_record| %>
      <% if @cart_errors[cart_record.id] -%>
      <%    trclass = ' alert' -%>
      <% else -%>
      <%    trclass = '' -%>
      <% end -%>
      <tr class="cart_entry<%= trclass.html_safe %>" >
        <td><%= cart_record.stored_record %></td>
        <td><%= cart_record.user %></td>
        <td><%= @cart_errors[cart_record.id] %></td>
        <td><%= link_to 'Remove', cart_record, id: cart_record.id, method: :delete, data: { confirm: 'Are you sure?' }, class: "remove_cart_record" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
